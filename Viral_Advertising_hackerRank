import java.util.Scanner;

public class Viral_Advertising_hackerRank {

    public static void main(String [] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int t=2;
        int s=5;
        int L=2;
        t=2;
        for(int i=1;i<n;i++){
            s=L*3;
            L=s/2;
            t=t+s/2;
        }
        System.out.println(t);
    }
}
